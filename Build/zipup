OS=${1:-UNIX}

./tidy

name=`echo V*p*`_for_${OS}
echo
echo Creating: ${name}.zip

rm -f ../.DS_Store
rm -f  ./.DS_Store
rm -f ../Adjuncts/.DS_Store
rm -f ../Documents/.DS_Store
rm -f ../Source/.DS_Store
rm -f ../Testing/.DS_Store
rm -f ../Testing/Algol/.DS_Store
rm -f ../Testing/Assembly/.DS_Store
rm -f ../Testing/Binary/.DS_Store
rm -f ../Testing/Kidsgrove/.DS_Store
rm -f ../Testing/Kidsgrove/Algol/.DS_Store
rm -f DH_source/.DS_Store
rm -f ${name}.zip
cd ../..
zip -r ${name}.zip emulation
echo
ls -la ${name}.zip
