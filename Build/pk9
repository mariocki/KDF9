ROOT=..
B=${ROOT}/Build
S=${ROOT}/Source
T=${ROOT}/Testing
OS=${1:-UNIX}

case ${OS} in
   UNIX|Unix|unix|LINUX|Linux|linux|macOS|Macintosh|Mac|OSX)
      STRIP="strip ${T}/ee9 ${T}/kal3 ${T}/kidopt ${T}/a2b ${T}/mtp ${T}/mkchan"
      SIZE="size   ${T}/ee9 ${T}/kal3 ${T}/kidopt ${T}/a2b ${T}/mtp ${T}/mkchan"
      ;;
   [Ww]indows|WINDOWS)
      STRIP=": "
      SIZE=": "
      ;;
   *)
      echo Invalid target OS parameter \"$1\"
      exit 2
      ;;
esac

eval ${STRIP}
eval ${SIZE}

cd ${T}
echo
echo Assembling all Usercode files.
for f in Assembly/*.k3; do p=`basename "${f}" .k3`; ./ucc "${p}"; done

cd ${B}
./zipup ${OS}
