ROOT=..
B=${ROOT}/Build
S=${ROOT}/Source
T=${ROOT}/Testing
A=${ROOT}/Testing/Adjuncts
OS=${1:-macOS}

FILES="ee9 kal3 kidopt a2b extract_symbols glance mtp ports st_tl ${A}/mkchan"

cd ${T}
case ${OS} in
   UNIX|Unix|unix|LINUX|Linux|linux)
      STRIP="strip "
      SIZE="size "
      ;;
   macOS|Macintosh|Mac|OSX)
      STRIP="strip "
      SIZE="size "
      ;;
   [Ww]indows|WINDOWS)
      STRIP=": "
      SIZE=": "
      ;;
   *)
      echo Invalid target OS parameter \"$1\"
      exit 2
      ;;
esac

eval ${STRIP} ${FILES}
eval ${SIZE}  ${FILES}
ls   -l       ${FILES}

echo
echo Assembling all Usercode files.
for f in Assembly/*.k3; do p=`basename "${f}" .k3`; ./ucc "${p}"; done

cd ${B}
./zipup ${OS}
