DATA=${KDF9_DATA:-Data}

trap "rm -f ${DATA}/crtest_data.txt cr_regr_tests_diff.txt" 0 1 2 3
opt=${1:-ae}

data=${DATA}/crtest_data.txt

cat  > $data <<++++
" ®©¬#%'................................................................COLUMN80________________________________________________________________________COL. 160
:=()£*,/:=()£*,/
