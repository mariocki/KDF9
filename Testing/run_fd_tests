opt=${1:-ae}

cat >settings_1.txt <<++++
K 14 FD
++++

echo TEST TDISK - POA, PIA, PMA, PMF - should end normally:
>FD0; ucc TDISK; nine_test TDISK - t $opt
echo TEST TDISK - POA, PIA, PMA, PMF done.
case $1 in
z)
   cat TP0; echo ======; echo
   od -c FD0 | more; echo ======; echo;;
*) ;;
esac

