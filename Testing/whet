SOURCE="${KIDSGROVE:-Kidsgrove}"
TARGET="${WHETSTONE:-Whetstone}"

if [ -r "${TARGET}/$1.a60" ]
then
   echo
   printf "\\a\\a\\a"
   printf "${TARGET}/$1.a60 already exists. Do you want to overwrite it (y/n)? "
   read reply
   echo
   case $reply in
      y | Y | yes | Yes | YES)
         if [ -w "${TARGET}/$1.a60" ]
         then
            echo Converting ${SOURCE}/$1.a60.
            echo
         else
            printf "\\a\\a\\a"
            echo "${TARGET}/$1.a60 cannot be overwritten."
            echo
            exit
         fi
         ;;
      *)
         echo
         exit
         ;;
   esac
fi

ports $1

walgol $*
