#!/bin/sh

RED='\033[1;31m'
GREEN='\033[1;32m'
NC='\033[0m' # No Color

if [ -s CP0 ]
then
    echo
    echo "${RED} CP0: ${GREEN}===================================================================================${NC}"
    iconv -f $(file -b --mime-encoding CP0) -t UTF8 < CP0 
    echo
    echo "${GREEN} ========================================================================================${NC}"
fi

if [ -s TP0 ]
then
    echo
    echo "${RED} TP0: ${GREEN}===================================================================================${NC}"
    iconv -f $(file -b --mime-encoding TP0) -t UTF8 < TP0 
    echo
    echo "${GREEN} ========================================================================================${NC}"
fi

if [ -s TP1 ]
then
    echo
    echo "${RED} TP1: ${GREEN}===================================================================================${NC}"
    iconv -f $(file -b --mime-encoding TP1) -t UTF8 < TP1
    echo
    echo "${GREEN} ========================================================================================${NC}"
fi

if [ -s LP0 ]
then
    echo "${RED} LP0: ${GREEN}===================================================================================${NC}"
    iconv -f $(file -b --mime-encoding LP0) -t UTF8 < LP0 
    echo
    echo "${GREEN} ========================================================================================${NC}"
fi

if [ -s LP1 ]
then
    echo "${RED} LP1: ${GREEN}===================================================================================${NC}"
    iconv -f $(file -b --mime-encoding LP1) -t UTF8 < LP1 
    echo
    echo "${GREEN} ========================================================================================${NC}"
fi