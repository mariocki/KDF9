#!/bin/sh

RED='\033[1;31m'
GREEN='\033[1;32m'
NC='\033[0m' # No Color

if [ -s CP0 ]
then
    echo
    echo "${RED} CP0: ${GREEN}===================================================================================${NC}"
    cat ${KDF9ROOT}/CP0 
    echo "${GREEN} ========================================================================================${NC}"
fi

if [ -s TP0 ]
then
    echo
    echo "${RED} TP0: ${GREEN}===================================================================================${NC}"
    cat ${KDF9ROOT}/TP0 
    echo "${GREEN} ========================================================================================${NC}"
    echo "==="
fi

if [ -s TP1 ]
then
    echo
    echo "${RED} TP1: ${GREEN}===================================================================================${NC}"
    cat ${KDF9ROOT}/TP1
    echo "${GREEN} ========================================================================================${NC}"
fi

if [ -s LP0 ]
then
    echo
    echo "${RED} LP0: ${GREEN}===================================================================================${NC}"
    cat  ${KDF9ROOT}/LP0 
    echo "${GREEN} ========================================================================================${NC}"
fi

if [ -s LP1 ]
then
    echo
    echo "${RED} LP1: ${GREEN}===================================================================================${NC}"
     ${KDF9ROOT}/LP1
    echo "${GREEN} ========================================================================================${NC}"
fi