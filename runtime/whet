#!/bin/bash

program="$1"
if /bin/sh ./lap "$program"
then
   cp FW0_for_Whetstone FW0

   mode=-d$2
   miscellany=-m$3
   if   [ "$mode" = -d ]
   then
         ./ee9  <Binary/KMW0201--UPU  >TP0;
   elif [ "$1" = - ]
   then
         ./ee9 -sp -df "$miscellany" <Binary/KMW0201--UPU  >TP0;
   elif [ "$mode" = -df ]
   then
      time ./ee9 -sp -df "$miscellany" <Binary/KMW0201--UPU  >TP0;
   else
         ./ee9 -sp "$mode" "$miscellany" <Binary/KMW0201--UPU  >TP0;
   fi

   echo

   if [ -s CP0 ]
   then
      echo
      echo CP0:
      echo ===
      more CP0
      echo ===
   fi

   if [ -s TP0 ]
   then
      echo
      echo TP0:
      echo ===
      more TP0
      echo ===
   fi

   if [ -s LP0 ]
   then
      echo
      echo LP0:
      echo ===
      more LP0
      echo ===
   fi
   echo
else
   echo
   exit 1
fi
